<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:ignore="HardcodedText" >

    <Gallery
        android:id="@+id/gallery1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/configpreferbutton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ConfigurePreferences" />

    <Button
        android:id="@+id/retrievebutton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Retrieve assignment list from server" />

    <Button
        android:id="@+id/managebutton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Manage assignments" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.46"
        android:src="@drawable/droid"
        tools:ignore="InefficientWeight,ContentDescription" />

</LinearLayout>